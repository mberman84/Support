<h2><%= @app.name %></h2>
<% if @app.is_owner?(current_user) %>
	(<%= link_to "Delete App", app_path, method: :delete %>)
	(<%= link_to "Edit App", edit_app_path %>)
<% end %>
<br /><br />

<h4>Issues:</h4>
<% @issues.each do |issue| %>
<li><%= link_to issue.subject, app_issue_path(issue.app, issue) %></li>
<% end %>

<br />
<%= will_paginate @issues %>
<br />

<%= link_to "Home", root_path %> | 
<%= link_to "Apps", apps_path %> |
<%= link_to "Issues", issues_path %> |
<% if current_user && current_user.is_publisher %>
	 | <%= link_to "Add Issue", new_app_issue_path(@app) %>
<% end %>
<h2>Subject: <%= @issue.subject %></h2>
<h4>Description: <%= @issue.description %></h4>
<% if !@current_user_vote %>
	<%= button_to "Vote Up", voterships_path(:issue_id => @issue.id), method: :create %>
<% else %>
	<%= button_to "Cancel Vote", @current_user_vote, method: :delete %>
<% end %>
<%= pluralize(@votes.count, "vote") %>
<br /><br />
Comments--<br />
<% @issue.comments.each do |comment| %>
<%= comment.content %> (user_id: <%= comment.user_id %>)<br />
<% end %>

<br /><br />

<%= form_for @comment do |f| %>
	<%= render 'comment_fields', :f => f %>
	<%= f.submit "Submit" %>
<% end %>
<br /><br />

